<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <cn.wildfire.chat.kit.widget.OptionItemView
        android:id="@+id/changePasswordOptionItemView"
        style="@style/OptionItem"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_option_item"
        app:show_arrow_indicator="true"
        app:title="修改密码" />

    <cn.wildfire.chat.kit.widget.OptionItemView
        android:id="@+id/changeTradePasswordOptionItemView"
        style="@style/OptionItem"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/selector_option_item"
        app:show_arrow_indicator="true"
        app:title="设置支付密码" />

</LinearLayout>